<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="hyper_ads.payment.gateway_builder.bitpay" class="Hyper\AdsBundle\Payment\BitPay\Gateway\BitPayGatewayBuilder">
            <tag name="hyper_ads.payment_gateway_builder" gateway="\Hyper\AdsBundle\Payment\BitPay\Gateway\BitPayGateway" />
        </service>

        <service id="hyper_ads.payment.plugin.bitpay" class="Hyper\AdsBundle\Payment\BitPay\OmnipayBitPayPaymentPlugin">
            <tag name="payment.plugin" />
        </service>

        <service id="hyper_ads.payment.approval_determiner.bitpay" class="Hyper\AdsBundle\Payment\BitPay\BitPayOrderApprovalDeterminer" />

        <service id="hyper_ads.payment.request.bitpay" class="Hyper\AdsBundle\Payment\BitPay\Requests\BitPayIpnRequest">
            <argument id="hyper_ads.payment.util.stdin_reader" type="service" />
        </service>

        <service id="hyper_ads.payment.processor.bitpay" class="Hyper\AdsBundle\Payment\BitPay\Processor\BitPayIpnRequestProcessor">
            <argument id="hyper_ads.payment.request.bitpay" type="service" />
            <argument id="doctrine.orm.entity_manager" type="service" />
            <argument id="hyper_ads.payment.plugin.bitpay" type="service" />
            <argument id="payment.plugin_controller" type="service" />
            <argument id="hyper_ads.payment.approval_determiner.bitpay" type="service" />
            <argument id="hyper_ads.payments_logger" type="service" />
            <argument id="hyper_ads.payment.util.hash_generator" type="service" />
        </service>

        <service id="hyper_ads.payment.params_provider.bitpay" class="Hyper\AdsBundle\Payment\BitPay\Parameters\BitPayParamsProvider">
            <tag name="hyper_ads.payment.params_provider" system_name="omnipay_bitpay" />
            <argument id="router" type="service" />
            <argument id="hyper_ads.payment.util.hash_generator" type="service" />
            <argument id="translator" type="service" />
            <argument>%hyper_ads.bitpay_transaction_speed%</argument>
            <argument>%hyper_ads.bitpay_full_notifications%</argument>
            <argument>%hyper_ads.bitpay_notifications_email%</argument>
        </service>

    </services>

</container>
